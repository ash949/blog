<% if notice && notice.length != 0 %>
  <%= render partial: 'notice', locals: {type: 'success', message: notice}%>
<% elsif alert && alert.length != 0 %>
  <%= render partial: 'notice', locals: {type: 'danger', message: alert}%>
<% end %>
<% if flash && flash[:error] %>
  <%= render partial: 'errors_flash', locals: {errors: flash[:error], model: flash[:model] }%>
<% end %>
<% devise_error_messages! && devise_error_messages!.length != 0 %>
  <%= render partial: 'notice', locals: {type: 'danger', message: devise_error_messages! } %>
<% end %>