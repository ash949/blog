<section class="container">
  <header>
    <h1>Posts Dashboard</h1>
  </header>

  <hr>

  <table id="posts-table" class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Featured</th>
        <th colspan="3">Operations</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title.html_safe %></td>
          <td><%= post.body.html_safe %></td>
          <td><%= post.featured %></td>
          <td><%= link_to 'Show', post, class: 'btn btn-success' %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>

</section><!-- end - post table section -->