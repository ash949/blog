<section class="container margin-bottom-md poped-out">
  <header>
    <h3><strong>Users Reviews</strong></h3>
  </header>
  <ul class="row">
  <% if @comments.count > 0 %>
    <% @comments.each do |comment| %>
      <li class="comment col-xs-12 col-sm-12 col-md-8">
        <%= render partial: 'comment', locals: {comment: comment}%>
      </li>
    <% end %>
  <% else %>
    <p>This post hasn't been reviewed yet</p>
  <% end %>
  </ul>
  <div class="clearfix"></div>
  <%= will_paginate @comments%>
</section><!-- end - Users' Reviews -->