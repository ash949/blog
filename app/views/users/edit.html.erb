<section class="container margin-bottom-md">
  <header>
    <h1>Editing User</h1>
  </header>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <%= render 'form', user: @user %>
      <%= link_to 'Show', @user, class: 'btn btn-primary'%>
      <% if current_user.admin? %>
      | <%= link_to 'Users Dashboard', users_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section><!-- end - edit user form -->