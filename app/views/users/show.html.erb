<section class="container margin-bottom-md">
  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>Email: </strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Admin?: </strong>
    <%= @user.admin %>
  </p>

  <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %>
  <% if current_user.admin? %>
  |  <%= link_to 'Users Dashboard', users_path, class: 'btn btn-primary' %>
  <% end %>

</section><!-- end - show single user-->